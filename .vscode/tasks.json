{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "install-api-dependencies",
      "type": "shell",
      "command": "uv",
      "args": ["sync", "--extra", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/src/api"
      },
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "lint-api",
      "type": "shell",
      "command": "uv",
      "args": ["run", "ruff", "check", "."],
      "options": {
        "cwd": "${workspaceFolder}/src/api"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "format-api",
      "type": "shell",
      "command": "uv",
      "args": ["run", "ruff", "format", "."],
      "options": {
        "cwd": "${workspaceFolder}/src/api"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "install-frontend-dependencies",
      "type": "shell",
      "command": "npm install",
      "options": {
        "cwd": "${workspaceFolder}/src/frontend"
      },
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "install-scripts-dependencies",
      "type": "shell",
      "command": "uv",
      "args": ["sync", "--extra", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/scripts"
      },
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "lint-scripts",
      "type": "shell",
      "command": "uv",
      "args": ["run", "ruff", "check", "."],
      "options": {
        "cwd": "${workspaceFolder}/scripts"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "format-scripts",
      "type": "shell",
      "command": "uv",
      "args": ["run", "ruff", "format", "."],
      "options": {
        "cwd": "${workspaceFolder}/scripts"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
